{
  "name": "stencila-js",
  "version": "0.25.0",
  "description": "Stencila for Javascript",
  "scripts": {
    "lint": "standard src/**/*.js test/**/*.js",
    "test": "node --require esm test | tap-spec",
    "cover": "nyc --require esm node test",
    "docs": "esdoc",
    "prepublishOnly": "npm run lint && npm run test && npm run docs",
    "clean": "rimraf coverage .nyc_output docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stencila/js.git"
  },
  "keywords": [
    "data",
    "documents",
    "sheets",
    "contexts",
    "sessions",
    "reproducibility",
    "science"
  ],
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/stencila/js/issues"
  },
  "homepage": "https://github.com/stencila/js#readme",
  "devDependencies": {
    "esdoc": "^1.1.0",
    "esdoc-standard-plugin": "^1.0.0",
    "esm": "^3.0.34",
    "nyc": "^11.7.3",
    "rimraf": "^2.6.2",
    "standard": "^11.0.1",
    "tap-spec": "^4.1.1",
    "tape": "^4.9.0"
  },
  "esdoc": {
    "source": "./src",
    "destination": "./docs",
    "plugins": [
      {
        "name": "esdoc-standard-plugin"
      }
    ]
  },
  "nyc": {
    "reporter": [
      "lcov",
      "text"
    ]
  },
  "dependencies": {
    "acorn": "^5.5.3",
    "astring": "^1.3.0",
    "doctrine": "^2.1.0"
  }
}
